# Production Environment Configuration
# Copy this to .env and fill in your actual production values

# Database (Supabase)
DATABASE_URL="your-production-database-url"
DIRECT_URL="your-production-direct-url"
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OxaPay Payment Gateway - PRODUCTION
# Get your production credentials from: https://oxapay.com/dashboard
OXAPAY_API_KEY=your-production-api-key
OXAPAY_MERCHANT_ID=your-production-merchant-id

# Production URL (MUST be HTTPS)
NEXT_PUBLIC_BASE_URL=https://yourdomain.com

# Payment Mode
# IMPORTANT: Set to 'false' for production ($50 payments)
# Set to 'true' only for testing ($1 payments)
PAYMENT_TEST_MODE=false
